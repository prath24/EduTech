<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    tools:context=".ActivitiesActivity">

    <RelativeLayout
        android:background="#fff"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/lato_bold"
            android:padding="0dp"
            android:text="Hi Samantha"
            android:textColor="#000"
            android:textSize="22sp" />
        <TextView
            android:textSize="12sp"
            android:fontFamily="@font/lato"
            android:layout_marginTop="4dp"
            android:layout_marginStart="19dp"
            android:text="Here are your daily activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"/>
        <ImageView
            android:background="@drawable/circle_purple"
            android:layout_marginEnd="-30dp"
            android:layout_marginTop="-20dp"
            android:layout_alignParentEnd="true"
            android:layout_width="130dp"
            android:layout_height="140dp"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/human_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/middle"
        android:background="#fff"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/dactivity1"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:background="@drawable/blue_activity_gradiant"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_baseline_access_alarm_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity 1"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato_bold"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/box2"
                android:layout_marginStart="6dp"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/green_activity_gradient"
                android:layout_height="130dp">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_baseline_access_alarm_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity 2"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato_bold"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_below="@id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
              android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:layout_width="170dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/yellow_activity_gradient"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_baseline_access_alarm_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity 3"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato_bold"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_width="170dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/red_activity_gradient"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:background="@drawable/ic_baseline_access_alarm_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity 4"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato_bold"/>
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_below="@id/middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Activities"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="18dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weekly_activities_rv"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/title2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        app:active_item_color="#6903c3"
        app:centre_button_color="@color/white"
        app:inactive_item_color="@color/black"
        app:space_background_color="#fff"
        app:centre_button_icon="@drawable/ic_baseline_dashboard_24"
        app:space_item_icon_size="22dp"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />

</RelativeLayout>